{
	"name": "@mutate/api",
	"version": "1.0.0",
	"description": "Backend API for the mutate",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsx watch --inspect --tsconfig ./tsconfig.json src/index.ts",
		"build": "tsup",
		"build:tsc": "tsc && cp -r src/db/migrations dist/db/",
		"start": "node dist/index.js",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx --tsconfig ./tsconfig.json src/db/migrate.ts",
		"db:migrate:prod": "node scripts/migrate.js",
		"db:studio": "drizzle-kit studio",
		"lint": "eslint src --ext .ts --fix",
		"typecheck": "tsc --noEmit",
		"test": "vitest run"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.35",
		"@aws-sdk/client-s3": "^3.946.0",
		"@aws-sdk/s3-request-presigner": "^3.946.0",
		"@better-auth/passkey": "^1.4.5",
		"@effect/platform": "^0.93.6",
		"@effect/platform-node": "^0.103.0",
		"@fastify/cors": "^11.1.0",
		"@fastify/helmet": "^13.0.2",
		"@fastify/jwt": "^10.0.0",
		"@fastify/multipart": "^9.3.0",
		"@fastify/rate-limit": "^10.3.0",
		"@mutate/core": "workspace:*",
		"@sendgrid/mail": "^8.1.6",
		"@simplewebauthn/server": "^13.2.2",
		"@types/bcryptjs": "^3.0.0",
		"@types/node": "^24.10.1",
		"ai": "^6.0.67",
		"bcryptjs": "^3.0.3",
		"better-auth": "^1.4.5",
		"bull": "^4.16.5",
		"csv-parse": "^6.1.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.0",
		"effect": "^3.19.9",
		"exceljs": "^4.4.0",
		"fastify": "^5.6.2",
		"fastify-plugin": "^5.1.0",
		"ioredis": "^5.8.2",
		"json-schema-to-ts": "^3.1.1",
		"nanoid": "^5.1.6",
		"pino": "^10.1.0",
		"postgres": "^3.4.7",
		"typescript": "^5.9.3",
		"ulid": "^3.0.2",
		"xlsx": "^0.18.5",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@esbuild-kit/cjs-loader": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "^8.48.1",
		"@typescript-eslint/parser": "^8.48.1",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.1",
		"pino-pretty": "^13.1.3",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"vitest": "^4.0.15"
	}
}
