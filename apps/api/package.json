{
	"name": "@mutate/api",
	"version": "1.0.0",
	"description": "Backend API for the mutate",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc && cp -r src/db/migrations dist/db/",
		"build:tsup": "tsup src/index.ts --format esm --dts",
		"start": "node dist/index.js",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx src/db/migrate.ts",
		"db:migrate:prod": "node scripts/migrate.js",
		"db:studio": "drizzle-kit studio",
		"lint": "eslint src --ext .ts --fix",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@fastify/cors": "^11.1.0",
		"@fastify/helmet": "^13.0.1",
		"@fastify/jwt": "^10.0.0",
		"@fastify/multipart": "^9.0.3",
		"@fastify/rate-limit": "^10.3.0",
		"@types/bcryptjs": "^3.0.0",
		"@types/node": "^24.3.0",
		"bcryptjs": "^3.0.2",
		"better-auth": "^1.3.7",
		"bull": "^4.16.5",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.5",
		"exceljs": "^4.4.0",
		"fastify": "^5.5.0",
		"fastify-plugin": "^5.0.1",
		"ioredis": "^5.7.0",
		"pino": "^9.9.0",
		"postgres": "^3.4.7",
		"typescript": "^5.9.2",
		"ulid": "^3.0.1",
		"xlsx": "^0.18.5",
		"zod": "^4.1.3"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.41.0",
		"@typescript-eslint/parser": "^8.41.0",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.34.0",
		"pino-pretty": "^13.1.1",
		"tsup": "^8.5.0",
		"tsx": "^4.20.5"
	}
}
