# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mutate_db_dev
DATABASE_MAX_CONNECTIONS=10

# Redis Configuration
# For local development: redis://localhost:6379
# For production (Upstash): rediss://default:your_password@your-endpoint.upstash.io:6379
REDIS_URL=redis://localhost:6379

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 Configuration (if using S3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=convert-files

# File Processing
MAX_FILE_SIZE=52428800
FILE_TTL=86400

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=1 minute

# Logging
LOG_LEVEL=info

# Better Auth Configuration
BETTER_AUTH_SECRET=your-super-secret-better-auth-key-minimum-32-characters-long
BETTER_AUTH_URL=http://localhost:3000

BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:3000

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@example.com
